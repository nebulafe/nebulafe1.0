<!Doctype html>
<html>
<head>
    <%- include ../meta.ejs %>

    <!--<link rel="stylesheet" href="/resource/css/forget.css">-->
    <link rel="stylesheet" href="/resource/css/user-myorder.css"/>
</head>
<body>
<%- include ../header.ejs %>
<div class="container">
    <%- include user_center_left.ejs %>
    <div class="right-container">
        <div class="my-wrap">
            <div class="title-row">
                <h3>我的订单</h3>
            </div>
            <div class="row">
                <table class="order-table">
                    <thead>
                        <tr>
                            <th width="80">序号</th>
                            <th width="200">课程名</th>
                            <th width="280">购买时间</th>
                            <th width="100">费用</th>
                            <th width="80">状态</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(function(item,index){ %>
                            <tr class="status-<%-item.has_pay%>">
                                <td>
                                    <span><%-item.order_id%></span>
                                </td>
                                <td>
                                    <span><%- item.order_name%></span>
                                </td>
                                <td>
                                    <% var d1 = (item.has_pay==1) ? (new Date(item.order_current_datetime)) : (new Date());%>
                                    <span>
                                        <%- d1.getFullYear()%>年<%- d1.getMonth()+1%>月<%- d1.getDate()%>日
                                        至
                                        <%- d1.getFullYear()+1%>年<%- d1.getMonth()+1%>月<%- d1.getDate()%>日
                                    </span>
                                </td>
                                <td>
                                    <span><%- item.order_price%>元</span>
                                </td>
                                <td>
                                    <%var status = (item.has_pay ===1)?'成功':'待付款' %>
                                    <span><%- status%></span>
                                </td>
                            </tr>
                        <%})%>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
<%- include ../footer.ejs %>
<script>seajs.use('js/user/mycourse');</script>
</body>
</html>